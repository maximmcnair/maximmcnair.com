---
import Layout from "../layouts/Layout.astro";
import Nav from "../components/Nav.astro";

const { frontmatter } = Astro.props;
---

<Layout title={frontmatter.title}>
  <Nav />
  <main class="article">
    <section>
      <h1 class="article-title">{frontmatter.title}</h1>
      <slot />
    </section>
  </main>
</Layout>

<style>
  main {
    display: flex;
    flex-direction: column;
    width: 100%;
    align-items: center;
    /* justify-content: center; */
    min-height: 100vh;
    padding-bottom: 100px;
    overflow: hidden;
  }

  main section {
    max-width: 800px;
    width: 100%;
    padding: 0px 10px;
    margin-top: 120px;
  }

  .article-title {
    margin-bottom: 0px;
    font-family: var(--typeface-laica);
    font-size: var(--typesize-h3);
    line-height: var(--type-lineheight-h3);
    font-weight: 500;
    max-width: 600px;
  }

  @media (min-width: 550px) {
    .article-title {
      font-size: var(--typesize-h3);
      line-height: var(--type-lineheight-h3);
    }
  }
</style>
