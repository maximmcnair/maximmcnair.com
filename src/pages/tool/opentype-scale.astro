    /* height: 80px; */
    border: 2px solid var(--color-grey-dark);
    padding: 3px 5px;
    border-radius: 3px;
    cursor: pointer;
    transition: all 0.3s;
    text-wrap: no-wrap;
    display: flex;
    align-items: center;
    /* ellipsis */
